body {
  font-size: 17px;
}

.sidebar .sidebar-sub-headers {
  font-size: 1em;
}

.navbar .home-link span.site-name {
  display: none !important;
}

a.active.sidebar-link
  color: $sosRed !important

.page-edit .last-updated .time
  color: #666 !important

.home .hero img {
  max-height: 430px;
}

.home .hero .description 
  font-size: calc(16px + (32 - 16) * ((100vw - 300px) / (1600 - 300))) !important
  line-height: calc(1.3em + (1.5 - 1.2) * ((100vw - 300px)/(1600 - 300))) !important
  color: #2c3e50 !important

.home .feature {
  flex-grow: 1 !important;
  flex-basis: 23% !important;
  max-width: 23% !important;
}

@media (max-width: 719px) {
  .home .feature {
    max-width: 100% !important;
    padding: 0 1.5rem !important;
  }
}

dt {
  font-weight: bolder;
}

dd {
  margin-bottom: 1em;
}

figcaption {
  text-align: center;
}

.two-column {
  grid-template-columns: 1fr 1fr !important;
}
.three-column {
  grid-template-columns: 1fr 1fr 1fr !important;
}
.four-column {
  grid-template-columns: 1fr 1fr 1fr 1fr !important;
}
.five-column {
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr !important;
}

.custom-block table {
