.navbar .home-link span.site-name {
  display: none !important;
}

.home .hero img {
    max-height: 430px;
}

.home .feature {
  flex-grow: 1 !important;
  flex-basis: 23% !important;
  max-width: 23% !important;
}

@media (max-width: 719px) {
  .home .feature {
      max-width: 100% !important;
      padding: 0 1.5rem !important;
  }
}

dt {
  font-weight: bolder;
}

dd {
  margin-bottom: 1em;
}

.custom-block table {
  background-color: white;
  border-collapse: collapse;
}

// SoS grønn = #96A407
// SoS blå = #388AA0
// SoS orange = #ED7900
// SoS rød = #A50007

.custom-block.tip {
  background-color: #f3f5f7;
  border-color: #96A407 !important;
}

.custom-block.warning {
  background-color: #f3f5f7;
  border-color: #388AA0 !important;
  color: #2c3e50;
}

.custom-block.warning .custom-block-title {
  color: #2c3e50;
}
