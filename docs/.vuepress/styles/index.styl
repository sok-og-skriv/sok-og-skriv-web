body, .sidebar {
  font-size: 17px;
}

.sidebar .sidebar-sub-headers {
  font-size: 1em;
}

.navbar .home-link span.site-name {
  display: none !important;
}

a.active.sidebar-link
  color: $sosRed !important

.home .hero img {
  max-height: 430px;
}

.home .hero .description 
  font-size: calc(16px + (32 - 16) * ((100vw - 300px) / (1600 - 300))) !important
  line-height: calc(1.3em + (1.5 - 1.2) * ((100vw - 300px)/(1600 - 300))) !important

.home .feature {
  flex-grow: 1 !important;
  flex-basis: 23% !important;
  max-width: 23% !important;
}

@media (max-width: 719px) {
  .home .feature {
    max-width: 100% !important;
    padding: 0 1.5rem !important;
  }
}

dt {
  font-weight: bolder;
}

dd {
  margin-bottom: 1em;
}

figcaption {
  text-align: center;
}

.two-column {
  grid-template-columns: 1fr 1fr !important;
}
.three-column {
  grid-template-columns: 1fr 1fr 1fr !important;
}
.four-column {
  grid-template-columns: 1fr 1fr 1fr 1fr !important;
}
.five-column {
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr !important;
}

.custom-block table {
  background-color: white;
  border-collapse: collapse;
}

.exercise
  margin 1rem 0
  padding .1rem 1.5rem
  border-top-right-radius 0.4rem
  border-bottom-right-radius 0.4rem
  background-color #f0f4f8
  border-left: 8px solid $sosOrange !important;
  .title
    font-weight bold

.example
  margin 1rem 0
  padding .1rem 1.5rem
  border-top-right-radius 0.4rem
  border-bottom-right-radius 0.4rem
  background-color #f0f4f8
  border-left: 8px solid $sosRed !important;
  .title
    font-weight bold

.custom-block table {
  background-color: white;
  border-collapse: collapse;
}

// SoS grønn = #96A407
// SoS blå = #388AA0
